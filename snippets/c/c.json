{
    "C-FileHeaderComments": {
        "prefix": "_fhc",
        "description": "File header comment",
        "body": [
            "/**",
            " * @brief: ${1}",
            " * @file: ${TM_FILENAME}",
            " * @author: Oswin",
            " * @date: $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE",
            " *",
            " * @copyright: ${2}All rights reserved.",
            " */",
            ""
        ]
    },
    "C-FileGuard": {
        "prefix": "_fg",
        "description": "File guard",
        "body": [
			"#ifndef ${TM_FILENAME_BASE/(.*)/${1:/upcase}/}_H_",
			"#define ${TM_FILENAME_BASE/(.*)/${1:/upcase}/}_H_",
            "#ifdef __cplusplus",
            "extern \"C\" {",
            "#endif /* __cplusplus */",
            "",
            "${0}",
            "",
            "#ifdef __cplusplus",
            "}",
            "#endif /* __cplusplus */",
			"#endif /* ${TM_FILENAME_BASE/(.*)/${1:/upcase}/}_H_ */"
        ]
    }
}
